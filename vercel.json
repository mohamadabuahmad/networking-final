{
  "builds": [
    {
      "src": "backend/server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "command": "CI=false npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server/server.js" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
